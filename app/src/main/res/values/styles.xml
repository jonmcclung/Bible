<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <style name="ribbonViewText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ribbonViewTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ribbonSubViewText" parent="ribbonViewText">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="chapterTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/verseTextSize</item>
        <item name="android:textColor">@color/verseTextColor</item>
    </style>

    <style name="chapterNumberStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/chapterNumberSize</item>
        <item name="android:textColor">@color/chapterNumberColor</item>
    </style>

    <style name="verseNumberStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/verseNumberSize</item>
        <item name="android:textColor">@color/verseNumberColor</item>
    </style>

    <style name="activity_reading_reference_info_view_style"
           parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_reading_reference_info_view_padding_side
        </item>
        <item name="android:paddingStart">@dimen/activity_reading_reference_info_view_padding_side
        </item>
        <item name="android:paddingEnd">@dimen/activity_reading_reference_info_view_padding_side
        </item>
        <item name="android:paddingRight">@dimen/activity_reading_reference_info_view_padding_side
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_info_view_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/activity_reading_reference_info_view_textSize</item>
    </style>

    <style name="go_button_style">
        <item name="android:text">@string/submit_reference_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">64sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/rounded_go_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tabTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ribbon_name_option_style" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ribbonNameOptionTextSize</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

</resources>
